<?xml version="1.0" encoding="UTF-8" ?>
<!-- Fix for the lollipop disabled button color as seen in:
    http://stackoverflow.com/questions/27926507/lollipop-disabled-button-which-style -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:color="@color/colorButtonDisabledLight"/>
    <item android:state_pressed="true" android:color="@color/colorPrimaryDark"/>
    <item android:state_focused="true" android:color="@color/colorButtonFocused"/>
    <item android:color="@color/colorPrimary"/>
</selector>